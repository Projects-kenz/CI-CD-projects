
pipeline {
    agent {
        docker {
            image 'python:3.8-slim'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {
        stage('Install') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Test') {
            steps {
                sh 'python -m unittest discover -s tests'
            }
        }
    }
}
