pipeline {
  agent {
    docker {
      image 'kenzieeiy/java17-maven-docker-git:latest'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'


    }
  }
  stages {
    stage('Checkout') {
      steps {
        checkout scm
        //git branch: 'main', url: 'https://github.com/Projects-kenz/CI-CD-projects.git'
      }
    }
    stage('Build and Test') {
      steps {
      
        sh 'cd java1-springboot-project/spring-boot-app && mvn clean package'
      }
    }
    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "https://er-onion-cylinder-recommended.trycloudflare.com"
      }
      steps {
        withCredentials([string(credentialsId: 'SONARQUBE-CRED', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'cd java1-springboot-project/spring-boot-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "kenzieeiy/java1-cicd:${BUILD_NUMBER}"
        
      }
      steps {
        script {
            sh 'cd java1-springboot-project/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "DOCKERHUB-CRED") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "CI-CD-projects"
            GIT_USER_NAME = "Projects-kenz"
        }
        steps {
            withCredentials([string(credentialsId: 'GITHUB-CRED', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "kenzmazin67@gmail.com"
                    git config user.name "kenzld"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i 's|image:.*|image: kenzieeiy/java1-cicd:${BUILD_NUMBER}|' spring-boot-app-manifests/deployment.yml
                    git add java1-springboot-project/spring-boot-app-manifests/deployment.yml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }
  }
}
